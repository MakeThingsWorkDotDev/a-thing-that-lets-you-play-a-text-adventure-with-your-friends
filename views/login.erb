<div class="max-w-2xl mx-auto my-12 p-5">
  <h1 class="text-2xl font-bold mb-4">Login</h1>

  <p class="mb-4">Welcome back! Please login to continue.</p>

  <% if @error %>
    <div class="text-red-600 my-2"><%= @error %></div>
  <% end %>

  <form method="post" action="/login">
    <div class="my-2">
      <label for="username" class="block mb-1">Username:</label>
      <input type="text" id="username" name="username" required class="p-1 w-52 border border border-terminal-green-500 border-2">
    </div>
    <div class="my-2">
      <label for="password" class="block mb-1">Password:</label>
      <input type="password" id="password" name="password" required class="p-1 w-52 border border border-terminal-green-500 border-2">
    </div>
    <%= submit_button('Login') %>
  </form>
</div>
