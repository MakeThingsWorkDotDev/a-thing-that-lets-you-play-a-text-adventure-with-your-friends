<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="mb-8">
    <h1 class="text-2xl font-bold mb-2 text-green-400">═══ WORLD BUILDER ═══</h1>
    <p class="text-gray-400">Create and manage world templates for your adventures</p>
  </div>

  <div class="mb-6">
    <a href="/worlds/builder/new" class="inline-block bg-green-700 hover:bg-green-600 text-white px-6 py-2 border-2 border-green-500">
      [+] CREATE NEW WORLD
    </a>
    <a href="/" class="inline-block ml-4 bg-gray-700 hover:bg-gray-600 text-white px-6 py-2 border-2 border-gray-500">
      [←] BACK TO HOME
    </a>
  </div>

  <% if @worlds.empty? %>
    <div class="border-2 border-gray-600 p-6 bg-gray-900">
      <p class="text-gray-400">No world templates found. Create your first world to get started!</p>
    </div>
  <% else %>
    <div class="space-y-4">
      <% @worlds.each do |world| %>
        <div class="border-2 border-green-700 p-4 bg-gray-900 hover:bg-gray-800">
          <div class="flex justify-between items-start">
            <div class="flex-1">
              <h3 class="text-lg font-bold text-green-400"><%= world.name %></h3>
              <% if world.description && !world.description.empty? %>
                <p class="text-gray-400 mt-1"><%= world.description %></p>
              <% end %>
              <div class="mt-2 text-sm text-gray-500">
                Created: <%= world.created_at.strftime('%Y-%m-%d %H:%M') %>
              </div>
            </div>
            <div class="ml-4">
              <a href="/worlds/builder/<%= world.id %>" class="bg-blue-700 hover:bg-blue-600 text-white px-4 py-2 border-2 border-blue-500 inline-block">
                [EDIT]
              </a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
