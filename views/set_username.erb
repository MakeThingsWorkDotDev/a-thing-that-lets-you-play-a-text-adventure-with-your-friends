<div class="max-w-2xl mx-auto my-12 p-5">
  <h1 class="text-2xl font-bold mb-4">Set Your Username</h1>

  <p class="mb-4">Please choose a username to join the chat.</p>

  <% if @error %>
    <div class="text-red-600 my-2"><%= @error %></div>
  <% end %>

  <form method="post" action="/set-username">
    <div class="my-2">
      <label for="username" class="block mb-1">Username:</label>
      <input type="text" id="username" name="username" required class="p-1 w-52 border border-gray-300 rounded">
    </div>
    <button type="submit" class="py-2 px-5 bg-blue-600 text-white rounded hover:bg-blue-700 my-1">Join Chat</button>
  </form>
</div>